<!DOCTYPE html>
<html lang="ko">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Pin1 Login</title>

    <!-- Custom fonts for this template-->
    <link href="../../../static/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link
        href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
        rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="../../../static/css/sb-admin-2.min.css" rel="stylesheet">
<style>
      .bgVideo {
    position: fixed;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    z-index: -1;
  }
</style>
</head>

<body class="bg-gradient-primary">
    <video autoplay muted loop class="bgVideo"; >
        <source src="../../../static/img/Login.mp4" type="video/mp4">
        Your browser does not support HTML5 video.
      </video>
    <div class="container">

        <!-- Outer Row -->
        <div class="row justify-content-center">

            <div class="col-xl-10 col-lg-12 col-md-9">

                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">
                            <div class="col-lg-6 d-none d-lg-block bg-login-image"></div>
                            <div class="col-lg-6">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-4">로그인</h1>
                                    </div>
                                    <form id="loginform" method="post" action="/auth/loginCheck">
                                        <div class="form-group">
						<input type="text" class="form-control form-control-user" name="userId" id="userId"	placeholder="아이디">
                                        </div>
                                        <div class="form-group">
					    <input type="password" class="form-control form-control-user" name="userPw" id="userPw" placeholder="패스워드" autocomplete="current-password">
                                        </div>
                                        <div class="form-group" style="display :flex;">
                                            <div class="custom-control custom-checkbox small">
                                                <input type="checkbox" class="custom-control-input" id="customCheck">
                                                <label class="custom-control-label" for="customCheck">Remember
                                                    Me</label>
                                            </div>
						<div class="custom-control custom-checkbox small" >
							<label for="position">직책:</label> 
            							<select id="position" name="position" required>
                							<option value="">Select Position</option>
                							<option value="PM">Project Manager</option>
                							<option value="dev">Developer</option>
                							<option value="client">Client</option>
            							</select><br>
						</div>
                                        </div>
                                        <a  onclick="LoginCheck()" class="btn btn-primary btn-user btn-block">
                                            로그인
                                        </a>
                                        <hr>
                                        <a href="index.html" class="btn btn-google btn-user btn-block">
                                            <i class="fab fa-google fa-fw"></i> Login with Google
                                        </a>
                                        <a href="index.html" class="btn btn-facebook btn-user btn-block">
                                            <i class="fab fa-facebook-f fa-fw"></i> Login with Facebook
                                        </a>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" href="forgot-password.html">Forgot Password?</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" href="/auth/registerForm">회원가입</a>
                                    </div>
				    <div class="text-center">
                                        <a class="small" href="/">메인화면으로</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>
    <script>
        LoginCheck= () => {
            let id = document.getElementById('userId');
            let pwd = document.getElementById('userPw');
            let position = document.getElementById('position');
            
            if (id.value === "") {
                alert("아이디를 입력하세요");
                return;
            }
            if (pwd.value === "") {
                alert("패스워드를 입력하세요");
                return;
            }
            if (position.value === "") {
                alert("직책을 선택해주세요");
                return;
            }
            console.log("로그인 시도")
            
            document.getElementById('loginform').submit();
           
        }
    </script>
    
    <!-- Bootstrap core JavaScript-->
    <script src="../../../static/vendor/jquery/jquery.min.js"></script>
    <script src="../../../static/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="../../../static/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="../../../static/js/sb-admin-2.min.js"></script>
	

</body>

</html>