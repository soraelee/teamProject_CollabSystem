    body {
    font-family: Arial, sans-serif;
    background-color: #f7f7f7;
    color: #333;
}

/* Board styles */
.content {
    width: 600px;
    margin: 0 auto;
    background-color: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    padding: 20px;
}

h3 {
    text-align: center;
    margin-bottom: 20px;
    color: #555;
}

table {
    width: 100%;
    border-collapse: collapse;
    margin-bottom: 20px;
}

th, td {
    padding: 10px;
    border: 1px solid #ddd;
}

th {
    background-color: #f2f2f2;
    font-weight: bold;
    text-align: left;
}

td {
    color: #333;
}

/* Buttons */
input[type="button"] {
    padding: 10px 20px;
    border: none;
    border-radius: 5px;
    background-color: #007bff;
    color: #fff;
    cursor: pointer;
    margin-right: 10px;
}

input[type="button"]:hover {
    background-color: #0056b3;
}

/* Reply and List sections */
.trReply {
    display: none;
}

/* Responsive Images */
img {
    max-width: 100%;
    height: auto;
}
